<Window x:Class="blux.CbaPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blux"
        mc:Ignorable="d"
        Title="Password" Height="154.5" Width="390.5" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Enter CBA password" HorizontalAlignment="Left" Margin="31,27,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="154,84,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click" IsDefault="true" />
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,29,0,0" Height="24" Width="173"/>
        <Label Visibility="Hidden" x:Name="lblIncorrectPassword" Content="Incorrect password" Background="red" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" Margin="163,53,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
