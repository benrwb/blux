<Window x:Class="blux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="b.lux" Height="286.8" Width="397" Closed="Window_Closed">
    <Grid>
        <Button Content="Pink" HorizontalAlignment="Left" Margin="123,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBox x:Name="txtEditor" FontFamily="Consolas" Margin="34,200,0,0" TextWrapping="Wrap" TextChanged="txtEditor_TextChanged" AcceptsTab="True" HorizontalAlignment="Left" Width="285" Height="29" VerticalAlignment="Top"/>
        <Button Content="Yellow" HorizontalAlignment="Left" Margin="213,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Button Content="Default" HorizontalAlignment="Left" Margin="34,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4"/>
        <Button Content="Red" HorizontalAlignment="Left" Margin="123,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_6"/>
        <Button Content="Orange" HorizontalAlignment="Left" Margin="213,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_7" RenderTransformOrigin="0.112,0.594"/>
        <Button Content="Neon" HorizontalAlignment="Left" Margin="34,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_8"/>
        <Slider x:Name="slider1" HorizontalAlignment="Left" Margin="114,106,0,0" VerticalAlignment="Top" Width="205" Minimum="1000" Maximum="6500" ValueChanged="Slider_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True" Value="6499"/>
        <TextBlock FontSize="10" HorizontalAlignment="Left" Margin="331,108,0,0" VerticalAlignment="Top" >
            <Run Text="{Binding ElementName=slider1, Path=Value}" /><Run Text="K" />
        </TextBlock>
        <Label Content="COLOUR TEMP" FontSize="10" HorizontalAlignment="Left" Margin="32,101,0,0" VerticalAlignment="Top"/>
        <Label Content="BRIGHTNESS" FontSize="10" HorizontalAlignment="Left" Margin="32,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.635,-5.164"/>
        <Slider x:Name="slider2" HorizontalAlignment="Left" Margin="114,129,0,0" VerticalAlignment="Top" Width="205" Minimum="20" Maximum="100" ValueChanged="Slider_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True" Value="6500"/>
        <TextBlock FontSize="10" HorizontalAlignment="Left" Margin="331,131,0,0" VerticalAlignment="Top" >
            <Run Text="{Binding Value, ElementName=slider2}" /><Run Text="%" />
        </TextBlock>
        <CheckBox x:Name="chkLink" Content="Link"   HorizontalAlignment="Left" Margin="206,152,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="chkTimer" Content="Timer" HorizontalAlignment="Left" Margin="269,152,0,0" VerticalAlignment="Top" Click="chkTimer_Click" IsChecked="True" />
        <Label Content="R/G/B" HorizontalAlignment="Left" Margin="32,179,0,0" VerticalAlignment="Top" FontSize="10"/>

    </Grid>
</Window>
