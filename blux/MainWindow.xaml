<Window x:Class="blux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="b.lux" Height="383.6" Width="397">
    <Grid>
        <Button Content="Pink" HorizontalAlignment="Left" Margin="123,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBox x:Name="txtEditor" FontFamily="Consolas" Margin="34,235,0,0" TextWrapping="Wrap" TextChanged="txtEditor_TextChanged" AcceptsTab="True" HorizontalAlignment="Left" Width="285" Height="29" VerticalAlignment="Top"/>
        <Button Content="Yellow" HorizontalAlignment="Left" Margin="213,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Button Content="Default" HorizontalAlignment="Left" Margin="34,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4"/>
        <Button Content="Red" HorizontalAlignment="Left" Margin="123,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_6"/>
        <Button Content="Orange" HorizontalAlignment="Left" Margin="213,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_7" RenderTransformOrigin="0.112,0.594"/>
        <Button Content="Neon" HorizontalAlignment="Left" Margin="34,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_8"/>
        <Slider x:Name="slider1" HorizontalAlignment="Left" Margin="114,142,0,0" VerticalAlignment="Top" Width="205" Minimum="1000" Maximum="6500" ValueChanged="Slider_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True" Value="6499"/>
        <TextBlock FontSize="10" HorizontalAlignment="Left" Margin="331,144,0,0" VerticalAlignment="Top" >
            <Run Text="{Binding ElementName=slider1, Path=Value}" /><Run Text="K" />
        </TextBlock>
        <Label Content="COLOUR TEMP" FontSize="10" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top"/>
        <Label Content="BRIGHTNESS" FontSize="10" HorizontalAlignment="Left" Margin="32,161,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.635,-5.164"/>
        <Slider x:Name="slider2" HorizontalAlignment="Left" Margin="114,165,0,0" VerticalAlignment="Top" Width="205" Minimum="20" Maximum="100" ValueChanged="Slider_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True" Value="6500"/>
        <TextBlock FontSize="10" HorizontalAlignment="Left" Margin="331,167,0,0" VerticalAlignment="Top" >
            <Run Text="{Binding Value, ElementName=slider2}" /><Run Text="%" />
        </TextBlock>
        <CheckBox x:Name="chkLink" Content="Link"   HorizontalAlignment="Left" Margin="206,188,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="chkTimer" Content="Timer" HorizontalAlignment="Left" Margin="269,188,0,0" VerticalAlignment="Top" Click="chkTimer_Click" IsChecked="True" />
        <Label Content="R/G/B" HorizontalAlignment="Left" Margin="32,214,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="lblError" HorizontalAlignment="Left" Margin="34,262,0,0" Foreground="Red" Height="26" VerticalAlignment="Top" />
        <CheckBox x:Name="chkPosterise" Content="Posterise" HorizontalAlignment="Left" Margin="34,102,0,0" VerticalAlignment="Top" Checked="chkPosterise_Changed" Unchecked="chkPosterise_Changed" />
        <Slider x:Name="sliderPosterise" HorizontalAlignment="Left" Margin="123,100,0,0" VerticalAlignment="Top" Width="66" Minimum="1" Maximum="8" Value="4" ValueChanged="sliderPosterise_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True"/>
        <TextBlock x:Name="lblPosterise" FontSize="10" HorizontalAlignment="Left" Margin="194,103,0,0" VerticalAlignment="Top" >
            <Run Text="{Binding ElementName=sliderPosterise, Path=Value}" />
        </TextBlock>
        <Button Content="Curves" HorizontalAlignment="Left" Margin="305,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="TEST" FontSize="10" HorizontalAlignment="Left" Margin="34,288,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="slider1_Copy" HorizontalAlignment="Left" Margin="114,288,0,0" VerticalAlignment="Top" Width="205" Minimum="0" Maximum="100"  SmallChange="1"  IsSnapToTickEnabled="True" ValueChanged="slider1_Copy_ValueChanged" />
        <Label Content="Add" FontSize="10" HorizontalAlignment="Left" Margin="114,311,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAdd" HorizontalAlignment="Left" Height="23" Margin="148,312,0,0" TextWrapping="Wrap" Text="0.1" VerticalAlignment="Top" Width="51"/>
        <Label Content="Multiply" FontSize="10" HorizontalAlignment="Left" Margin="213,311,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMultiply" HorizontalAlignment="Left" Height="23" Margin="264,312,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="51"/>
        <Button x:Name="btnMixer" Content="Mixer" HorizontalAlignment="Left" Margin="305,25,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.485,0.729" Click="btnMixer_Click"/>
        <Button Content="Mag" HorizontalAlignment="Left" Margin="305,88,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
    </Grid>
</Window>
