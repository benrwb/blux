<Window x:Class="blux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="b.lux" Height="330" Width="401.8" Closed="Window_Closed" >
    <Grid>
        <Button Content="Pink" HorizontalAlignment="Left" Margin="210,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Grayscale" HorizontalAlignment="Left" Margin="122,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="txtEditor" Margin="34,137,0,0" TextWrapping="Wrap" Text="TextBox" TextChanged="txtEditor_TextChanged" AcceptsTab="True" HorizontalAlignment="Left" Width="295" Height="93" VerticalAlignment="Top"/>
        <Button Content="Yellow" HorizontalAlignment="Left" Margin="299,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Button Content="Default" HorizontalAlignment="Left" Margin="34,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4"/>
        <Button Content="Red 1" HorizontalAlignment="Left" Margin="122,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_6"/>
        <Button Content="Mixer" HorizontalAlignment="Left" Margin="284,259,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_5"/>
        <Label x:Name="txtSummary" Content="Label" HorizontalAlignment="Left" Margin="34,256,0,0" VerticalAlignment="Top"/>
        <Button Content="Orange" HorizontalAlignment="Left" Margin="299,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_7"/>
        <Button Content="Neon" HorizontalAlignment="Left" Margin="34,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_8"/>
        <Button Content="Red 2" HorizontalAlignment="Left" Margin="210,57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_9"/>
        <Slider x:Name="slider1" HorizontalAlignment="Left" Margin="114,88,0,0" VerticalAlignment="Top" Width="215" Minimum="1000" Maximum="6500" ValueChanged="Slider_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True" Value="6500"/>
        <Label FontSize="10" Content="{Binding ElementName=slider1, Path=Value}" HorizontalAlignment="Left" Margin="329,83,0,0" VerticalAlignment="Top" />
        <Label Content="COLOUR TEMP" FontSize="10" HorizontalAlignment="Left" Margin="32,83,0,0" VerticalAlignment="Top"/>
        <Label Content="BRIGHTNESS" FontSize="10" HorizontalAlignment="Left" Margin="34,107,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.635,-5.164"/>
        <Slider x:Name="slider2" HorizontalAlignment="Left" Margin="114,111,0,0" VerticalAlignment="Top" Width="215" Minimum="10" Maximum="100" ValueChanged="Slider_ValueChanged" SmallChange="1"  IsSnapToTickEnabled="True" Value="6500"/>
        <Label FontSize="10" Content="{Binding Value, ElementName=slider2}" HorizontalAlignment="Left" Margin="329,107,0,0" VerticalAlignment="Top" />

    </Grid>
</Window>
